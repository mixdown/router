{
  "app": {
    "plugins": {
      "router": {
        "options": {
          "routes": {
            "index": {
              "method": "GET",
              "path": "/",
              "handler": "index"
            }
          }
        }
      }
    }
  },
  "sites": [
  {
    "id": "dogs",
    "hostmap": [ "dogsdogsdogs.com" ],
    "plugins": {
      "router": {
        "module": "/tests/dogrouter.js",
        "options": {
          "routes": {
            "search": {
              "name":"search",
              "method": "GET",
              "path": "/dogs/:gender/:bark/:age",
              "handler": "dogs",
              "params": {
                "bark": {
                  "regex": "bark-(loud|quiet)",
                  "kind": "rest",
                  "enabled": true
                },
                "gender": {
                  "regex": "(\\w+)",
                  "kind": "rest",
                  "enabled": true
                },
                "age": {
                  "regex": "(\\d+)",
                  "kind": "rest",
                  "enabled": true
                }
              }
            },

            "single": {
              "name":"single",
              "method": "GET",
              "path": "/dog/:id",
              "handler": "dog",
              "params": {
                "hidePictures": {
                  "kind": "query",
                  "regex": "(true|false)",
                  "enabled": true
                },
                "id": {
                  "regex": "(\\d{1})",
                  "kind": "rest",
                  "enabled": true
                }
              }
            },

            "create": {
              "name":"create",
              "method": "POST",
              "path": "/create/dog/:id",
              "body": [ "gender", "age", "phone" ],
              "handler": "create",
              "params": {
                "id": {
                  "kind": "rest",
                  "regex": "(\\d{1})",
                  "enabled": true
                }
              }
            }
          }
        }
      }
    }
  },
  
  {
    "id": "cats",
    "hostmap": [ "catscatscats.com" ],
    "plugins": {
      "router": {
        "module": "/tests/catrouter.js",
        "options": {
          "routes": {
            "search": {
              "method": "GET",
              "path": "/cats/:gender/:claws/:age",
              "handler": "cats",
              "params": {
                "claws": {
                  "regex": "claws-(yes|no)",
                  "kind": "rest",
                  "enabled": true
                },
                "gender": {
                  "regex": "(\\w+)",
                  "kind": "rest",
                  "enabled": true
                },
                "age": {
                  "regex": "(\\d+)",
                  "kind": "rest",
                  "enabled": true
                }
              }
            },
            "single": {
              "method": "GET",
              "path": "/cat/:id",
              "handler": "cat",
              "params": {
                "id": {
                  "regex": "(\\d{1})",
                  "kind": "rest",
                  "enabled": true
                }
              }
            }
          }
        }
      }
    }
  }
  ],
  "server": {
    "listen": {
      "port": "8081"
    },
    "logger": {
      "defaults": {
        "handleExceptions": false,
        "json": false,
        "timestamp": true,
        "colorize": true,
        "prettyPrint": true
      },
      "transports": [{
        "transport": "Console",
        "options": {
          "level": "info"
        }
      }]
    }
  }
}